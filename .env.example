# -------------------------
# Server configuration
# -------------------------
PORT=5000

# -------------------------
# Database (Cosmos DB for MongoDB)
# Replace with your connection string from Azure
# -------------------------
MONGO_URI="mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTERNAME>.mongocluster.cosmos.azure.com/<DBNAME>?tls=true&authMechanism=SCRAM-SHA-256&retryWrites=false"

# -------------------------
# JWT Authentication
# -------------------------
JWT_SECRET=your_jwt_secret_here

# -------------------------
# Azure Blob Storage (if you use it for uploads)
# -------------------------
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=<account-name>;AccountKey=<account-key>;EndpointSuffix=core.windows.net"
AZURE_STORAGE_CONTAINER_NAME=uploads

# -------------------------
# CORS (frontend URL)
# -------------------------
CLIENT_URL=http://localhost:3000
